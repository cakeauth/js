{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compileOnSave": false,
  "compilerOptions": {
    "incremental": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "traceResolution": false,
    "listEmittedFiles": false,
    "resolveJsonModule": true,
    "listFiles": false,
    "pretty": true,
    "noUnusedLocals": true,
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "rootDir": "./src",
    // Remove outDir and declarationDir from tsconfig
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "removeComments": true
  },
  "include": ["src/**/*", "package.json"],
  "exclude": [".git", ".github", "node_modules", "dist", "test"],
  "types": ["node"]
}
